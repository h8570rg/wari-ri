{
	"name": "wari-ri",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack --port 3002",
		"build": "next build",
		"start": "next start",
		"lint": "biome check",
		"typecheck": "tsc --noEmit",
		"format": "biome format --write",
		"functions:build": "npm run build --prefix functions",
		"deploy:dev": "npm run functions:build && firebase deploy --only functions,firestore:rules,firestore:indexes --project wari-ri-dev",
		"deploy:dev:functions": "npm run functions:build && firebase deploy --only functions --project wari-ri-dev",
		"deploy:dev:firestore": "firebase deploy --only firestore:rules,firestore:indexes --project wari-ri-dev",
		"deploy:dev:rules": "firebase deploy --only firestore:rules --project wari-ri-dev",
		"deploy:dev:indexes": "firebase deploy --only firestore:indexes --project wari-ri-dev"
	},
	"dependencies": {
		"@mantine/core": "8.3.15",
		"@mantine/form": "8.3.15",
		"@mantine/hooks": "8.3.15",
		"@tabler/icons-react": "3.36.1",
		"firebase": "12.9.0",
		"mantine-form-zod-resolver": "1.3.0",
		"next": "16.1.6",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.0",
		"@types/node": "24.10.13",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"lefthook": "2.1.1",
		"postcss": "8.5.6",
		"postcss-preset-mantine": "1.18.0",
		"postcss-simple-vars": "7.0.1",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=22",
		"npm": ">=10"
	},
	"volta": {
		"node": "24.13.1",
		"npm": "11.10.0"
	}
}
